<Window
    x:Class="ZtxFrameWork.UI.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:ZtxFrameWork.UI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="信息管理平台"
    Width="338"
    Height="236"
    dx:ThemeManager.ThemeName="DeepBlue"
    AllowsTransparency="True"
    Background="Transparent"
    DataContext="{dxmvvm:ViewModelSource Type=ViewModels:LoginWindowViewModel}"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    Topmost="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">


    <Grid>
        <Grid.InputBindings>
            <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
        </Grid.InputBindings>
        <dxlc:GroupBox Header="系统登录" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">
            <Canvas x:Name="MyCanvas">
                <TextBlock
                    Canvas.Left="14"
                    Canvas.Top="10"
                    Width="298"
                    Height="45"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe Script"
                    FontSize="30"
                    FontWeight="Bold"
                    Text="{Binding Title, Source={StaticResource ResourceKey=AppSet}}"
                    TextWrapping="Wrap" />
                <Border
                    Canvas.Left="44"
                    Canvas.Top="69"
                    Width="74"
                    Height="77"
                    BorderBrush="Black"
                    BorderThickness="0"
                    RenderTransformOrigin="0.932,1.234">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding IcoPath, Source={StaticResource ResourceKey=AppSet}}" />
                    </Border.Background>
                </Border>
                <dxg:LookUpEdit
                    x:Name="lookEd"
                    Canvas.Left="148"
                    Canvas.Top="69"
                    Width="151"
                    Height="25"
                    DisplayMember="名称"
                    EditMode="Standalone"
                    EditValue="{Binding Current分店ID, UpdateSourceTrigger=PropertyChanged}"
                    ItemsSource="{Binding 分店Source}"
                    PopupHeight="200"
                    PopupWidth="300"
                    TabIndex="0"
                    ValueMember="ID" />
                <dxe:TextEdit
                    x:Name="txtUserName"
                    Canvas.Left="148"
                    Canvas.Top="99"
                    Width="150"
                    Height="25"
                    CharacterCasing="Upper"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
                <dxe:PasswordBoxEdit
                    Canvas.Left="148"
                    Canvas.Top="127"
                    Width="150"
                    Height="25"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="{Binding PassWord, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Canvas.Left="148"
                    Canvas.Top="160"
                    Width="64"
                    Height="27"
                    Command="{Binding LoginCommand}"
                    Content="登录" />
                <TextBlock
                    Canvas.Left="233"
                    Canvas.Top="50"
                    Width="76"
                    Height="13"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe Script"
                    FontSize="10"
                    Foreground="#FF207E7E"
                    RenderTransformOrigin="-0.327,1.192"
                    Text="by:郑天祥"
                    TextWrapping="Wrap" />
                <Button
                    Canvas.Left="228"
                    Canvas.Top="160"
                    Width="60"
                    Height="27"
                    Command="{Binding CancelCommand}"
                    Content="取消" />

            </Canvas>
        </dxlc:GroupBox>

    </Grid>
</Window>
